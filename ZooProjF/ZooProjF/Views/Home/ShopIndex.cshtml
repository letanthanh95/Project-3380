<main>


    <!-- Category Area Start-->
    <section class="category-area section-padding30">
        <div class="container-fluid">

            <nav class="navbar navbar-expand-lg navbar-light">


                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto" style="text-align:right">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Cart"><i class="fas fa-shopping-cart">Cart</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Checkout">Check Out</a>
                        </li>

                    </ul>
                    <form class="form-inline my-2 my-lg-0" method="POST">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
                    </form>

                </div>
            </nav>







            <!-- Section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle text-center mb-85">
                        <h2>Shop by Category</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-6">
                    <div class="single-category mb-30">
                        <div class="category-img figure">
                            <img src="@Url.Content("~/Content/assets_store/img/categori/Food.jpg")" class="figure-img img-fluid rounded" alt=" ">
                            <div class="caption">
                                <h3 style="text-align:center">Food</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="single-category mb-30">
                        <div class="category-img text-center">
                            <img src="@Url.Content("~/Content/assets_store/img/categori/toy.jpg")" alt="">
                            <div class="caption">
                                <h3 style="text-align:center">Toys</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="single-category mb-30">
                        <div class="category-img">
                            <img src="@Url.Content("~/Content/assets_store/img/categori/giftshop.png")" style="height:298px" alt="">
                            <div class="caption">
                                <h3 style="text-align:center">Souvenirs</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Category Area End-->
    <!-- Latest Products Start -->
    <section class="latest-product-area padding-bottom">
        <div class="container">
            <div class="row product-btn d-flex justify-content-end align-items-end">
                <!-- Section Tittle -->
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="section-tittle mb-30">
                        <h2>Products</h2>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="properties__button f-right">
                        <!--Nav Button  -->
                        <!--End Nav Button  -->
                    </div>
                </div>
            </div>
            <!-- Nav Card -->
            <div class="tab-content" id="nav-tabContent">
                <!-- card one -->
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row">
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="single-product mb-60">
                                <div class="product-img">
                                    <img src="@Url.Content("~/Content/assets_store/img/categori/hamburger.jpg")" alt="">

                                </div>
                                <div class="product-caption">

                                    <h4><a href="#">Hamburger</a></h4>

                                    <div class="price">
                                        <ul>
                                            <li>$9.00</li>

                                        </ul>
                                        <button type="button" class="btn-sm btn-outline-success" value="submit">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="single-product mb-60">
                                <div class="product-img">
                                    <img src="@Url.Content("~/Content/assets_store/img/categori/toys.jpg") " style="width:360px;height:240px" alt="">
                                </div>
                                <div class="product-caption">

                                    <h4><a href="#">Teddy Bears</a></h4>

                                    <div class="price">
                                        <ul>
                                            <li>$20.00</li>

                                        </ul>
                                        <button type="button" class="btn-sm btn-outline-success" value="submit">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-6">
                            <div class="single-product mb-60">
                                <div class="product-img">
                                    <img src="@Url.Content("~/Content/assets_store/img/categori/key.jpg")" style="width:360px;height:240px" alt="">
                                    <div class="new-product">
                                        <span>Sold Out</span>
                                    </div>
                                </div>
                                <div class="product-caption">

                                    <h4><a href="#">Animal Key Chains</a></h4>

                                    <div class="price">
                                        <ul>
                                            <li>$3.00</li>

                                        </ul>
                                        <button type="button" class="btn-sm btn-outline-success " value="submit">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- Card two -->
            <!-- End Nav Card -->
        </div>
    </section>
    <!-- Latest Products End -->
    <!-- Best Product Start -->


</main>
